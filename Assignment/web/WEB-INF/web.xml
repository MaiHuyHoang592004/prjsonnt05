<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controler.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeeListController</servlet-name>
        <servlet-class>controler.EmployeeListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeListController</servlet-name>
        <url-pattern>/employee/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AttendanceController</servlet-name>
        <servlet-class>attendance.AttendanceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AttendanceController</servlet-name>
        <url-pattern>/attendance</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductionPlanCreateController</servlet-name>
        <servlet-class>productionplan.ProductionPlanCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductionPlanCreateController</servlet-name>
        <url-pattern>/productionplan/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductionPlanDeleteController</servlet-name>
        <servlet-class>productionplan.ProductionPlanDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductionPlanDeleteController</servlet-name>
        <url-pattern>/productionplan/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductionPlanListController</servlet-name>
        <servlet-class>productionplan.ProductionPlanListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductionPlanListController</servlet-name>
        <url-pattern>/productionplan/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductionPlanEditController</servlet-name>
        <servlet-class>productionplan.ProductionPlanEditController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductionPlanEditController</servlet-name>
        <url-pattern>/productionplan/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProductionPlanSearchController</servlet-name>
        <servlet-class>productionplan.ProductionPlanSearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductionPlanSearchController</servlet-name>
        <url-pattern>/productionplan/search</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>filter.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>